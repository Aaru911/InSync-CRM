<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
    <link rel="stylesheet" href="../edit.css">
</head>

<body>

    <div class="edit-page">
        <h1>Edit Form</h1>
        <form action="/entries/update/{{data.id}}" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Name" value={{data.user.name}} required="true"><br>

            <label for="phone">Phone No.:</label>
            <input type="number" id="phone" name="phone" placeholder="Phone No." value={{data.user.phone}} required="true"><br>

            <label for="nop">Number of People:</label>
            <input type="number" id="nop" name="nop" placeholder="Number of People" value={{data.nop}} required="true"><br>

            <label for="ac">Number of AC rooms:</label>
            <input type="number" id="ac" name="ac" placeholder="Number of AC rooms" value={{data.ac}} required="true"><br>

            <label for="nonac">Number of non AC rooms:</label>
            <input type="number" id="nonac" name="nonac" placeholder="Number of non AC rooms" value={{data.nonac}} required="true"><br>

            <div class="date-container">
                <div class="date-input">
                    <label for="checkin">Check-in date:</label>
                    <input type="date" id="checkin" name="checkin" placeholder="Check-in date" value={{data.checkin}} required="true">
                </div>
                <div class="date-input">
                    <label for="checkout">Check-out date:</label>
                    <input type="date" id="checkout" name="checkout" placeholder="Check-out date"
                        value={{data.checkout}} required="true">
                </div>
            </div>

            <input type="submit" value="UPDATE">
        </form>
        <p id="p1" style="display: none;">{{data.checkin}}</p>
        <p id="p2" style="display: none;">{{data.checkout}}</p>
        <script>
            const checkin = new Date(document.getElementById("p1").innerHTML);
            const checkout = new Date(document.getElementById("p2").innerHTML);
            document.getElementById("checkin").value = `${checkin.getFullYear()}-${(checkin.getMonth() + 1).toString().padStart(2, '0')}-${checkin.getDate().toString().padStart(2, '0')}`;
            document.getElementById("checkout").value = `${checkout.getFullYear()}-${(checkout.getMonth() + 1).toString().padStart(2, '0')}-${checkout.getDate().toString().padStart(2, '0')}`;
        </script>
    </div>

    <style>
        
    </style>

</body>

</html>